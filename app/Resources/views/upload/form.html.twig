{% extends 'base.html.twig' %}

{% block stylesheets %}

<style>

    body {
        background: #f5f5f5;
        min-height: 100%;
        display: flex;
        align-items: center;
        height: 100vh;
    }

    .box-upload {
        background: #fff;
        padding: 15px; 
        border-radius: 4px; 
    }

</style>

{% endblock stylesheets %}

{% block body %}

    <section class="box-upload container">
        <div class="row">
            <div class="col-lg-6 ml-auto mr-auto">
                <form action="/process" class="form" method="post" enctype='multipart/form-data'>

                    <div class="form-group">
                        <label for="peopleXML">People File: </label>
                        <input type="file" name="peopleFile" id="peopleXML" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="ordersXML">XML File</label>
                        <input type="file" name="ordersFile" id="ordersXML" required>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary"> UPLOAD</button>
                    </div>

                </form>
            </div>
        </div>
    </section>

{% endblock body %}